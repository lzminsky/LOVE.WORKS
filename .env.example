# ===========================================
# lovebomb.works Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# -------------------------------------------
# REQUIRED: Anthropic (Claude API)
# -------------------------------------------
ANTHROPIC_API_KEY=sk-ant-...

# -------------------------------------------
# OPTIONAL: Supabase (Database)
# Without these, session management falls back to cookies only
# -------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# -------------------------------------------
# OPTIONAL: Upstash Redis (Rate Limiting)
# Without these, rate limiting is disabled
# -------------------------------------------
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=...

# -------------------------------------------
# OPTIONAL: PostHog (Analytics)
# Without these, analytics is disabled
# -------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# -------------------------------------------
# OPTIONAL: Twitter API (Gate verification)
# Required for like/retweet verification
# -------------------------------------------
TWITTER_CLIENT_ID=...
TWITTER_CLIENT_SECRET=...
TWITTER_TARGET_TWEET_ID=...

# -------------------------------------------
# App Configuration
# -------------------------------------------
NEXT_PUBLIC_APP_URL=https://lovebomb.works
